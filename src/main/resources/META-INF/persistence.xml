<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence  http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="AlgaWorksPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <!-- <jta-data-source>enfermagem</jta-data-source>  -->
    <class>com.algaworks.comercial.model.Dao.Drogas</class>
    <class>com.algaworks.comercial.model.Dao.Ganho</class>
    <class>com.algaworks.comercial.model.Dao.Hemodinamica</class>
    <class>com.algaworks.comercial.model.Dao.Login</class>
    <class>com.algaworks.comercial.model.Dao.Perda</class>
    <class>com.algaworks.comercial.model.Dao.Usuario</class>
    <class>com.algaworks.comercial.model.Dto.TipoItemDroga</class>
    <class>com.algaworks.comercial.model.Dto.TiposGanhos</class>
    <class>com.algaworks.comercial.model.Dao.PerdaItem</class>
    <properties>
      <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/conferenciaenfermagem"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="helio"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
      <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
    </properties>
  </persistence-unit>
</persistence>
